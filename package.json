{
	"name": "lmstudio-proxy",
	"version": "0.1.0",
	"private": true,
	"description": "Secure proxy system for LM Studio",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "bun run --filter '@lmstudio-proxy/common' build && bun run --filter '@lmstudio-proxy/client' build && bun run --filter '@lmstudio-proxy/server' build",
		"clean": "bun run --filter '*' clean",
		"test": "bun run --filter '*' test",
		"lint": "biome check .",
		"lint:fix": "biome check --write --unsafe .",
		"format": "biome format --write .",
		"client": "bun run --filter '@lmstudio-proxy/client' start",
		"server": "bun run --filter '@lmstudio-proxy/server' start",
		"test:integration": "bun run --filter '@lmstudio-proxy/test' test",
		"test:server": "bun run --filter '@lmstudio-proxy/test' test:server",
		"test:client": "bun run --filter '@lmstudio-proxy/test' test:client"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/a14a-org/lmstudio-proxy.git"
	},
	"author": "a14a-org",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@types/node": "^25.0.3",
		"typescript": "^5.9.3"
	}
}
